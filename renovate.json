{
  "extends": [
    ":preserveSemverRanges",
    "config:recommended"
  ],
  "composer": {
    "rangeStrategy": "update-lockfile"
  },
  "packageRules": [
    {
      "groupName": "symfony packages",
      "groupSlug": "symfony",
      "matchPackageNames": [
        "symfony/{/,}**"
      ]
    },
    {
      "groupName": "phpstan packages",
      "groupSlug": "phpstan",
      "matchPackageNames": [
        "phpstan/{/,}**"
      ]
    }
  ]
}
